<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item1"
            android:id="@+id/iv_1"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center_horizontal"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="110dp"
            android:layout_below="@+id/iv_1"
            android:layout_alignStart="@+id/iv_1"
            android:src="@drawable/item2"
            android:layout_margin="4dp"
            android:id="@+id/iv_2"/>

        <RelativeLayout
            android:layout_below="@+id/iv_2"
            android:layout_width="wrap_content"
            android:layout_alignEnd="@+id/iv_1"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 250.000"
                android:textSize="16sp"
                android:id="@+id/tv_price"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malaka"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60%"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="210"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/tv_name"
                android:gravity="bottom"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_percent"
                android:drawableRight="@drawable/ic_favorite_border_cyan_a200_24dp"/>


            <TextView
                android:id="@+id/tv_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baju ini sangat cocok dipakai untuk pesta pernikahan"
                android:textAlignment="viewStart"
                android:layout_below="@id/tv_name"/>

        </RelativeLayout>

    </RelativeLayout>




</ScrollView>