<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/zameeralogoiphone"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_login_input"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_emailWrapper">

            <android.support.design.widget.TextInputEditText
                android:layout_width="350dp"
                android:id="@+id/login_email"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:id="@+id/login_passwordWrapper"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="350dp"
                android:id="@+id/login_password"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:layout_marginTop="2dp"
        android:layout_centerInParent="true"
        android:id="@+id/login_sign_in"
        android:layout_below="@+id/layout_login_input"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_sign_in"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"
        android:id="@+id/login_tv_or"
        android:text="Or"/>

    <com.google.android.gms.common.SignInButton
        android:layout_margin="2dp"
        android:layout_below="@id/login_tv_or"
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>


</RelativeLayout>